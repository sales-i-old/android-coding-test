<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fcontact_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.salesi.coding.ui.screens.FContactDetailsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/male_icon"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/imgGender" />

    <LinearLayout
        android:id="@+id/name_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgGender"
        android:layout_centerHorizontal="true"
        android:weightSum="100"

        android:layout_marginTop="12dp">
        <TextView
            android:text="Name: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:text="Mr."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:gravity="center"
             />

        <TextView
            android:layout_width="wrap_content"
            android:text="sdsdsd"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:id="@+id/txtFirstName"
             />

        <TextView
            android:text="sdsdsdsd"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastName"
            android:layout_weight="40" />
    </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        android:id="@+id/phone"
        android:tintMode="src_in"
        android:tint="@android:color/holo_red_light"
        tools:targetApi="ICE_CREAM_SANDWICH"
        android:layout_above="@+id/closeApp"
        android:layout_toLeftOf="@+id/imgGender"
        android:layout_toStartOf="@+id/imgGender"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="38dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_action_email"
        android:id="@+id/email"
        android:tint="@android:color/holo_red_light"
        android:tintMode="src_in"
        tools:targetApi="ICE_CREAM_SANDWICH"
        android:layout_alignTop="@+id/phone"
        android:layout_toRightOf="@+id/imgGender"
        android:layout_toEndOf="@+id/imgGender"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/closeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:id="@+id/addressLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Address: "
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddress4" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTown" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCounty" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPostcode" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCountry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hobbiesLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addressLinearLayout"
            android:layout_marginTop="15dp"
            android:text="Hobbies: "
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
