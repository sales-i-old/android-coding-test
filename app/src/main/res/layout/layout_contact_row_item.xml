<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="885"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:id="@+id/contact_id"
        android:typeface="serif" />

    <TextView
        android:text="Arriva PLC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/contact_name"
        android:textColor="@android:color/holo_blue_dark"
        tools:targetApi="ICE_CREAM_SANDWICH"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_alignParentBottom="false"
        android:layout_alignBaseline="@+id/contact_id" />

    <ImageView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        android:id="@+id/phone"
        android:tintMode="src_in"
        android:tint="@android:color/holo_red_light"
        tools:targetApi="ICE_CREAM_SANDWICH"
        android:layout_below="@+id/contact_id"
        android:layout_toLeftOf="@+id/email"
        android:layout_toStartOf="@+id/email"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_action_email"
        android:layout_alignTop="@+id/phone"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"
        android:tint="@android:color/holo_red_light"
        android:tintMode="src_in"
        tools:targetApi="ICE_CREAM_SANDWICH"
        android:layout_alignBaseline="@+id/phone" />

</RelativeLayout>